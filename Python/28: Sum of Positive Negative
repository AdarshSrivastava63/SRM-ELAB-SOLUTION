a=int(input())

l=[]

se=0

so=0

sn=0

for i in range(a):

    b=int(input())

    l.append(b)

for i in range(a):

    if (l[i]>0):

     if (l[i]%2==0):

         se=se+l[i]

     else:

         so=so+l[i]

    else:

        sn=sn+l[i]

print ("Sum of positive even numbers:",se)

print ("Sum of positive odd numbers:",so)

print ("Sum of negative numbers:",sn)
